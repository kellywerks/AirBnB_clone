<div class="row">
  <div class="col-sm-4">
    <h2>Sign in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {role: "form"}) do |f| %>
    <div class="form-group">
      <%= f.label :username, class: "sr-only" %>
      <%= f.text_field :username, autofocus: true, class: "form-control", id: :username, placeholder: "Username" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control", id: :password, placeholder: "Password" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div><%= f.submit "Sign in", class: "btn btn-default" %></div>
    <% end %>

    <br>

    <%= render "devise/shared/links" %>

  </div>
</div>
